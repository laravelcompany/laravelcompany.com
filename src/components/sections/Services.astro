const listLd = {
    "@context": "https://schema.org",
    "@type": "ItemList",
    "itemListElement": services.map((s, i) => ({
        "@type": "ListItem",
        "position": i + 1,
        "item": {
            "@type": "Service",
            "name": s.name,
            "url": `https://laravelcompany.com/software/${s.slug}`,
            "description": s.description
        }
    }))
};

