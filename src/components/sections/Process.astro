<Section id="process">
  <div class="mt-[140px]">

    <div class="flex flex-col items-center gap-10 mb-20 sm:flex-row">
      <p
        class="greenhead text-xl text-center sm:text-left text-3xl sm:text-3xl"
        title="our laravel agency services "
