---
import { formatDate } from "../../utils";
import type { CollectionEntry } from "astro:content";

import Card from "../ui/Card.astro";

const { software } = Astro.props;

interface Props {
  software: CollectionEntry<'software'>;
}
---
<Card isUnderline={true}>
<article class="p-6">
  <div class="flex justify-between items-center mb-5 text-gray-500">
    Software 
  </div>
  <h2 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">{software.data.title}</h2>
  <p class="mb-5 font-light text-gray-500" style="white-space: pre-line">{software.data.summary}</p>
  <a href={'/articles/' + software.data.slug} class="inline-flex items-center font-medium text-black hover:text-green">
    Read more
    <svg class="ml-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
</a>
</article> 
</Card>