---
import { formatDate } from "../../utils"; // Assuming this utility is still needed, although not used in the provided snippet
import type { CollectionEntry } from "astro:content";

import Card from "../ui/Card.astro"; // Assuming this is your custom Card wrapper

const { software } = Astro.props;

interface Props {
  software: CollectionEntry<'docs'>;
}
---
<Card isUnderline={true}>
  {/* Make the article a flex container with a row direction, remove overall padding */}
  <article class="flex flex-row h-full p-0">
    {/* Image Container: Occupies half the width */}
    <div class="w-1/2 h-full overflow-hidden">
      <img
        src="/logo-light.svg"
        alt="Logo"
        class="w-full h-full object-cover" 
      />
    </div>

    {/* Content Container: Occupies the other half, add back the padding */}
    <div class="w-1/2 p-6 flex flex-col h-full"> {/* Add padding back here, use flex-col for content stacking */}
      <div class="flex justify-between items-start mb-4 text-gray-500">
        <span class="text-sm" title="laravel documentation">Documentation</span>
        {/* You could add a smaller logo here if desired, or remove it entirely */}
        {/* <img src="/logo-light.svg" alt="Logo" class="w-6 h-6 object-contain" /> */}
      </div>
      {/* Use flex-grow to make the title take up available space, pushing the link down */}
      <h2 class="mb-3 text-2xl font-bold tracking-tight text-gray-900 flex-grow">
        {software.data.title}
      </h2>

      {/* Optional: Add a short description if available */}
      {/* {software.data.description && <p class="mb-4 text-gray-700">{software.data.description}</p>} */}

      {/* Use mt-auto to push the link to the bottom */}
      <a href={'/docs/' + software.slug} class="inline-flex items-center font-medium text-black hover:text-green mt-auto">
        Read more
        <svg class="ml-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
      </a>
    </div>
  </article>
</Card>