---
import MainLayout from "../layouts/MainLayout.astro";
import Sponsors from "../components/sections/Sponsors.astro";
---

<MainLayout title="Laravel Services">
    <main class="space-y-28">
        <!-- Hero Section -->
        <section class="relative from-blue-50 to-white">
            <div class="container mx-auto px-4 py-20 md:py-28">
                <div class="flex flex-col md:flex-row items-center gap-12">
                    <div class="md:w-1/2 text-center md:text-left space-y-8">
                        <h1
                            class="text-5xl md:text-6xl font-bold leading-tight text-gray-900"
                        >
                            Contact <span class="text-red-600">Laravel</span> Experts.
                    
                        </h1>
                        <p class="text-xl text-gray-600 leading-relaxed">
                            Accelerate your digital transformation with our
                            comprehensive Laravel solutions. From startups to
                            enterprises, we deliver secure, scalable web
                            applications that drive business growth.
                        </p>
                       
                    </div>
                    <div class="md:w-1/2 mt-12 md:mt-0">
                        <!-- Calendly inline widget begin -->
<div class="calendly-inline-widget" data-url="https://calendly.com/laravelagency" style="min-width:320px;height:700px;"></div>
<script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js" async></script>
<!-- Calendly inline widget end -->
                    </div>
                </div>
            </div>
        </section>
    </main>
</MainLayout>
