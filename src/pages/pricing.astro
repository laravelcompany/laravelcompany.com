---
import MainLayout from "../layouts/MainLayout.astro";
import Card from "../components/ui/Card.astro";

const priceData = [
  {
    title: "Starter",
    slug: "starter",
    description: "Ideal for startups and individuals requiring essential software development services like small content changes, small updates.",
    price: 29,
    pricingUnit: "per month",
    details: {
      developers: "1 Developer",
      support: "10 hours",
      updates: "1 project"
    },
    features: ["Essential feature set", "Basic integrations", "Email support"],
    callToAction: "Get Started",
    link: "/contact",
    recommendedFor: "Startups, small projects",
    isPopular: false,
  },
  {
    title: "Growth",
    slug: "growth",
    description: "This package addresses the most common growth challenges of businesses. It provides a robust feature set, standard integrations, and priority email support.",
    price: 49,
    pricingUnit: "per month",
    details: {
      developers: "1 Developer",
      support: "50 hours",
      updates: "2 projects"
    },
    features: [
      "Robust feature set",
      "Standard integrations",
      "Priority email support",
      "Team collaboration tools",
    ],
    callToAction: "Get Started",
    link: "/contact",
    recommendedFor: "SMEs, growing teams",
    isPopular: true,
  },
  {
    title: "Premium",
    slug: "premium",
    description: "Tailored for enterprises requiring advanced features, faster delivery, and dedicated account management with a Lead Developer.",
    price: 79,
    pricingUnit: "per month",
    details: {
      developers: "1 Developer",
      support: "100 hours",
      updates: "3 projects"
    },
    features: [
      "Comprehensive feature set",
      "Advanced integrations",
      "Dedicated support & account management",
      "Faster delivery timelines",
    ],
    callToAction: "Contact Us",
    link: "/contact",
    recommendedFor: "Large organizations, high-demand projects",
    isPopular: false,
  },
];

const currencySymbol = "£";
---

<MainLayout title="Our Pricing">
  <main>
    <section class="py-12 px-4 mx-auto max-w-screen-xl">
      <div class="mx-auto max-w-screen-md text-center mb-10 lg:mb-16">
        <h1 class="mb-4 text-3xl font-extrabold text-[#031D40] sm:text-4xl">
          Choose the perfect plan for your business
        </h1>
        <p class="text-gray-500 text-[#031D40] sm:text-xl">
          Transparent and flexible pricing to help your business grow with <strong>Laravel Agency</strong>.
        </p>
      </div>

      <div class="grid gap-6 md:grid-cols-3">
        {priceData.map((plan) => (
          <Card
            isUnderline={true}
            className={plan.isPopular ? "border-2 border-primary-500 dark:border-primary-400 relative" : ""}
          >
            <div class="flex flex-col p-6 h-full">
              {plan.isPopular && (
                <div class="absolute top-0 right-0 bg-primary-500 text-white text-xs font-semibold px-3 py-1 rounded-bl">
                  Popular
                </div>
              )}
              
              <header class="mb-6 text-center">
                <h2 class="text-2xl font-semibold text-[#031D40] mb-2">
                  {plan.title}
                </h2>
                <p class="text-[#031D40]">
                  {plan.description}
                </p>
              </header>

              <div class="flex justify-center items-baseline my-6">
                <span class="text-4xl font-extrabold text-[#031D40]">
                  {currencySymbol}{plan.price}
                </span>
                <span class="ml-1 text-gray-500 dark:text-gray-400">
                  /{plan.pricingUnit.replace(" ", "")}
                </span>
              </div>

              <div class="mb-6 bg-gray-50 dark:bg-gray-800 p-4 rounded-lg">
                <p class="text-sm text-gray-700 dark:text-gray-300 mb-2">
                  <strong>Recommended for:</strong> {plan.recommendedFor}
                </p>
                <ul class="space-y-2 text-sm">
                  {Object.entries(plan.details).map(([key, value]) => (
                    <li class="flex items-center">
                      <svg class="flex-shrink-0 w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                      <span class="capitalize">{key}:</span> <span class="ml-1 font-medium">{value}</span>
                    </li>
                  ))}
                </ul>
              </div>

              <div class="mb-6 flex-grow">
                <h3 class="font-medium mb-3 ">Features:</h3>
                <ul class="space-y-2">
                  {plan.features.map((feature) => (
                    <li class="flex items-center">
                      <svg class="flex-shrink-0 w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                      <span class="text-gray-700 dark:text-gray-300">{feature}</span>
                    </li>
                  ))}
                </ul>
              </div>

              <a
                href={plan.link}
                class="mt-auto text-center  focus:ring-4 focus:ring-primary-200 font-medium rounded-lg text-sm px-5 py-2.5 bg-primary-500 dark:bg-primary-500 dark:hover:bg-primary-600 dark:focus:ring-primary-800"
              >
                {plan.callToAction}
              </a>
            </div>
          </Card>
        ))}
      </div>
    </section>
       <!-- Additional Sections -->
       <div class="mt-16">
        <h2 class="text-2xl font-bold text-center text-[#031D40] mb-6">
          Why Choose Us?
        </h2>
        <p class="text-center text-gray-600 max-w-screen-md mx-auto">
          Our Laravel development services are trusted by businesses of all sizes. We combine cutting-edge technology, industry expertise, and unparalleled customer support to deliver solutions that drive growth and innovation.
        </p>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-8">
          <div class="flex flex-col items-center text-center p-6 bg-gray-50 dark:bg-gray-800 rounded-lg">
            <svg class="w-8 h-8 text-primary-500 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <h3 class="text-lg font-semibold text-[#031D40]">Expertise</h3>
            <p class="text-gray-600 dark:text-gray-300">
              Years of experience in Laravel development ensure your project is in capable hands.
            </p>
          </div>
          <div class="flex flex-col items-center text-center p-6 bg-gray-50 dark:bg-gray-800 rounded-lg">
            <svg class="w-8 h-8 text-primary-500 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
            <h3 class="text-lg font-semibold text-[#031D40]">Scalability</h3>
            <p class="text-gray-600 dark:text-gray-300">
              Build solutions that grow with your business, from startups to enterprises.
            </p>
          </div>
          <div class="flex flex-col items-center text-center p-6 bg-gray-50 dark:bg-gray-800 rounded-lg">
            <svg class="w-8 h-8 text-primary-500 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <h3 class="text-lg font-semibold text-[#031D40]">Support</h3>
            <p class="text-gray-600 dark:text-gray-300">
              Dedicated support teams available to assist you every step of the way.
            </p>
          </div>
        </div>
      </div>

      <!-- Testimonials -->
      <div class="mt-16">
        <h2 class="text-2xl font-bold text-center text-[#031D40] mb-6">
          What Our Clients Say
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="p-6 bg-gray-50 dark:bg-gray-800 rounded-lg">
            <p class="text-gray-600 dark:text-gray-300 italic">
              "The Growth plan has been instrumental in scaling our platform. The team’s expertise and responsiveness have exceeded our expectations."
            </p>
            <p class="text-primary-500 mt-4 font-semibold">— Jane Doe, CEO of TechCorp</p>
          </div>
          <div class="p-6 bg-gray-50 dark:bg-gray-800 rounded-lg">
            <p class="text-gray-600 dark:text-gray-300 italic">
              "As a startup, the Starter plan gave us everything we needed to launch quickly without breaking the bank. Highly recommend!"
            </p>
            <p class="text-primary-500 mt-4 font-semibold">— John Smith, Founder of StartupX</p>
          </div>
        </div>
      </div>

      <!-- FAQs -->
      <div class="mt-16">
        <h2 class="text-2xl font-bold text-center text-[#031D40] mb-6">
          Frequently Asked Questions
        </h2>
        <div class="max-w-screen-md mx-auto space-y-4">
          <details class="bg-gray-50 dark:bg-gray-800 p-4 rounded-lg">
            <summary class="font-semibold text-[#031D40] cursor-pointer">
              Can I upgrade or downgrade my plan at any time?
            </summary>
            <p class="text-gray-600 dark:text-gray-300 mt-2">
              Yes, you can upgrade or downgrade your plan at any time. Simply contact our support team, and we’ll assist you with the transition.
            </p>
          </details>
          <details class="bg-gray-50 dark:bg-gray-800 p-4 rounded-lg">
            <summary class="font-semibold text-[#031D40] cursor-pointer">
              What happens if I exceed the included hours in my plan?
            </summary>
            <p class="text-gray-600 dark:text-gray-300 mt-2">
              If you exceed the included hours, we offer additional hours at a discounted rate. You can also consider upgrading to a higher plan for more flexibility.
            </p>
          </details>
          <details class="bg-gray-50 dark:bg-gray-800 p-4 rounded-lg">
            <summary class="font-semibold text-[#031D40] cursor-pointer">
              Do you offer custom plans for large enterprises?
            </summary>
            <p class="text-gray-600 dark:text-gray-300 mt-2">
              Absolutely! We tailor custom solutions to meet the unique needs of large organizations. Contact us for more details.
            </p>
          </details>
        </div>
      </div>
    </section>
  </main>
</MainLayout>