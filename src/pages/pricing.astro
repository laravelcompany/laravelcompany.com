---
import MainLayout from "../layouts/MainLayout.astro";
import Card from "../components/ui/Card.astro";

const priceData = [
  {
    title: "Starter",
    slug: "starter",
    description: "Perfect for solo founders or small teams who need quick fixes, content changes, or maintenance with predictable costs.",
    price: 250,
    pricingUnit: "per 10 hours",
    details: {
      developers: "1 Junior Developer",
      support: "10 hours/month",
      updates: "1 active project"
    },
    features: [
      "Bug fixes & small updates",
      "Basic integrations",
      "Email support",
      
    ],
    callToAction: "Get Started",
    link: "/contact",
    recommendedFor: "Startups, MVPs, maintenance",
    isPopular: false,
  },
  {
    title: "Growth",
    slug: "growth",
    description: "For growing teams who need more consistent engineering support with better response times and proactive help.",
    price: 1500,
    pricingUnit: "per 50 hours",
    details: {
      developers: "1 Mid-Level Developer",
      support: "50 hours/month",
      updates: "Up to 2 active projects"
    },
    features: [
      "Scalable backend and frontend dev",
      "Standard integrations",
      "Priority email support",
      "Daily progress check-ins",
    ],
    callToAction: "Get Started",
    link: "/contact",
    recommendedFor: "SMEs, scale-ups",
    isPopular: true,
  },
  {
    title: "Unlimited",
    slug: "unlimited",
    description: "For teams needing a high-velocity development partner. Unlimited hours, dedicated lead developer, and full-stack support.",
    price: 4500,
    pricingUnit: "flat rate/month",
    details: {
      developers: "1 Senior Developer (Full-time)",
      support: "Unlimited hours",
      updates: "Unlimited projects"
    },
    features: [
      "Full-stack architecture & dev",
      "Advanced features & integrations",
      "Dedicated Slack channel",
      "Daily planning & reporting",
      "Ongoing optimisation & consulting",
    ],
    callToAction: "Book Consultation",
    link: "/contact",
    recommendedFor: "Established businesses, agencies",
    isPopular: false,
  },
];

const currencySymbol = "£";
---

<MainLayout title="Laravel consulting pricing">
  <main>
    <section class="py-12 px-4 mx-auto max-w-screen-xl">
      <div class="mx-auto max-w-screen-md text-center mb-10 lg:mb-16">
        <h1 class="mb-4 text-3xl font-extrabold text-[#031D40] sm:text-4xl">
          Choose the perfect plan for your business
        </h1>
        <p class="text-gray-500 text-[#031D40] sm:text-xl">
          Transparent and flexible pricing to help your business grow with <strong>Laravel Agency</strong>.
        </p>
      </div>

      <div class="grid gap-6 md:grid-cols-3">
        {priceData.map((plan) => (
          <Card
            isUnderline={true}
            className={plan.isPopular ? "border-2 border-primary-500 dark:border-primary-400 relative" : ""}
          >
            <div class="flex flex-col p-6 h-full">
              {plan.isPopular && (
                <div class="absolute top-0 right-0 bg-primary-500 text-white text-xs font-semibold px-3 py-1 rounded-bl">
                  Popular
                </div>
              )}
              
              <header class="mb-6 text-center">
                <h2 class="text-2xl font-semibold text-[#031D40] mb-2">
                  {plan.title}
                </h2>
                <p class="text-[#031D40]">
                  {plan.description}
                </p>
              </header>

              <div class="flex justify-center items-baseline my-6">
                <span class="text-4xl font-extrabold text-[#031D40]">
                  {currencySymbol}{plan.price}
                </span>
                <span class="ml-1 text-gray-500 dark:text-gray-400">
                  /{plan.pricingUnit.replace(" ", "")}
                </span>
              </div>

              <div class="mb-6 bg-gray-50 dark:bg-gray-800 p-4 rounded-lg">
                <p class="text-sm text-gray-700 dark:text-gray-300 mb-2">
                  <strong>Recommended for:</strong> {plan.recommendedFor}
                </p>
                <ul class="space-y-2 text-sm">
                  {Object.entries(plan.details).map(([key, value]) => (
                    <li class="flex items-center">
                      <svg class="flex-shrink-0 w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                      <span class="capitalize">{key}:</span> <span class="ml-1 font-medium">{value}</span>
                    </li>
                  ))}
                </ul>
              </div>

              <div class="mb-6 flex-grow">
                <h3 class="font-medium mb-3 ">Features:</h3>
                <ul class="space-y-2">
                  {plan.features.map((feature) => (
                    <li class="flex items-center">
                      <svg class="flex-shrink-0 w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                      <span class="text-gray-700 dark:text-gray-300">{feature}</span>
                    </li>
                  ))}
                </ul>
              </div>

              <a
                href={plan.link}
                class="mt-auto text-center  focus:ring-4 focus:ring-primary-200 font-medium rounded-lg text-sm px-5 py-2.5 bg-primary-500 dark:bg-primary-500 dark:hover:bg-primary-600 dark:focus:ring-primary-800"
              >
                {plan.callToAction}
              </a>
            </div>
          </Card>
        ))}
      </div>
    </section>
     <!-- Additional Sections -->
<div class="mt-20 px-4 sm:px-6 lg:px-8">
  <h2 class="text-3xl sm:text-4xl font-extrabold text-center text-[#031D40] mb-4">
    Why Choose Us?
  </h2>
  <p class="text-center text-gray-600 dark:text-gray-400 max-w-2xl mx-auto mb-10">
    Trusted by startups, SMEs and enterprise clients. 
    We blend modern Laravel practices with real-world experience and rock-solid support to deliver impactful results.
  </p>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
    <!-- Expertise -->
    <div class="flex flex-col items-center text-center p-6 bg-white dark:bg-gray-800 rounded-2xl shadow-md transition hover:shadow-xl">
      <i class="fas fa-code text-3xl text-[#007BFF] mb-4"></i>
      <h3 class="text-lg font-semibold text-[#031D40] mb-2">Expertise</h3>
      <p class="text-gray-600 dark:text-gray-300">
        Over a decade of <a title="laravel develoment services" href="https://laravelcompany.com">Laravel development</a> ensures your project is built with rock-solid architecture and performance.
      </p>
    </div>

    <!-- Scalability -->
    <div class="flex flex-col items-center text-center p-6 bg-white dark:bg-gray-800 rounded-2xl shadow-md transition hover:shadow-xl">
      <i class="fas fa-layer-group text-3xl text-[#28A745] mb-4"></i>
      <h3 title="laravel scalability engineer" class="text-lg font-semibold text-[#031D40] mb-2">Scalability</h3>
      <p class="text-gray-600 dark:text-gray-300">
        We craft systems that scale gracefully from MVPs to enterprise platforms with multi-tenancy and modular design.
        We use TDD in our development process with already build starter kits.
      </p>
    </div>

    <!-- Support -->
    <div class="flex flex-col items-center text-center p-6 bg-white dark:bg-gray-800 rounded-2xl shadow-md transition hover:shadow-xl">
      <i class="fas fa-headset text-3xl text-[#FFC107] mb-4"></i>
      <h3 class="text-lg font-semibold text-[#031D40] mb-2" title="laravel support engineer">Support</h3>
      <p class="text-gray-600 dark:text-gray-300">
        We're with you at every step. Expect fast response times, clear communication, and long-term partnerships.
      </p>
    </div>
  </div>
</div>

      <!-- Testimonials -->
      <div class="mt-16">
        <h2 class="text-2xl font-bold text-center text-[#031D40] mb-6">
          What Our Clients Say
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="p-6 bg-gray-50 dark:bg-gray-800 rounded-lg">
            <p class="text-gray-600 dark:text-gray-300 italic">
              "The Growth plan has been instrumental in scaling our platform. The team’s expertise and responsiveness have exceeded our expectations."
            </p>
            <p class="text-primary-500 mt-4 font-semibold">— Jane Doe, CEO of TechCorp</p>
          </div>
          <div class="p-6 bg-gray-50 dark:bg-gray-800 rounded-lg">
            <p class="text-gray-600 dark:text-gray-300 italic">
              "As a startup, the Starter plan gave us everything we needed to launch quickly without breaking the bank. Highly recommend!"
            </p>
            <p class="text-primary-500 mt-4 font-semibold">— John Smith, Founder of StartupX</p>
          </div>
        </div>
      </div>

      <!-- FAQs -->
      <div class="mt-16">
        <h2 class="text-2xl font-bold text-center text-[#031D40] mb-6" title="Frequently Asked Questions">
          Frequently Asked Questions
        </h2>
        <div class="max-w-screen-md mx-auto space-y-4">
          <details class="bg-gray-50 dark:bg-gray-800 p-4 rounded-lg">
            <summary class="font-semibold text-[#031D40] cursor-pointer">
              Can I upgrade or downgrade my plan at any time?
            </summary>
            <p class="text-gray-600 dark:text-gray-300 mt-2">
              Yes, you can upgrade or downgrade your plan at any time. Simply contact our support team, and we’ll assist you with the transition.
            </p>
          </details>
          <details class="bg-gray-50 dark:bg-gray-800 p-4 rounded-lg">
            <summary class="font-semibold text-[#031D40] cursor-pointer">
              What happens if I exceed the included hours in my plan?
            </summary>
            <p class="text-gray-600 dark:text-gray-300 mt-2">
              If you exceed the included hours, we offer additional hours at a discounted rate. You can also consider upgrading to a higher plan for more flexibility.
            </p>
          </details>
          <details class="bg-gray-50 dark:bg-gray-800 p-4 rounded-lg">
            <summary class="font-semibold text-[#031D40] cursor-pointer">
              Do you offer custom plans for large enterprises?
            </summary>
            <p class="text-gray-600 dark:text-gray-300 mt-2">
              Absolutely! We tailor custom solutions to meet the unique needs of large organizations. Contact us for more details.
            </p>
          </details>
        </div>
      </div>
    </section>
  </main>
</MainLayout>